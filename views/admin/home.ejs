<%- include('../layouts/header.ejs') -%>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #997e7e;
        color: #1c1c1c;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 400px;
        margin: 100px auto; /* Center the container vertically and horizontally */
        padding: 20px;
        background-color: #f3f3f3;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    a {
        display: block;
        margin-top: 20px;
        text-decoration: none;
        color: #283746;
        font-weight: bold;
    }

    a:hover {
        color: #80aad7;
    }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        color: #484848;
    }

    td {
        padding: 10px;
        border-bottom: 1px solid #e6e6e6;
    }
</style>

<div class="container" style="margin-top: 14.5rem;">
    <h1 style="text-align: center;">WELCOME, <%= admin.name %></h1>
  <div style="text-align: center;">
    <a href="/admin/dashboard">Dashboard</a>
    
    <table>
        <tr>
            <td>Email</td>
            <td><%= admin.email %></td>
        </tr>
        <tr>
            <td>Name</td>
            <td><%= admin.name %></td>
        </tr>
    </table>

  <form action="/admin/logout" method="post">
    <button type="submit">Logout</button>
  </form>
  </div>


</div>

<%- include('../layouts/footer.ejs') -%>
